<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipeInfo">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/appetizers_image" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/recipe_Title"
                android:text="Title"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@id/recipeImage">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_description"
                android:layout_below="@id/recipe_Title"
                android:text="description"
                android:padding="10dp"
                android:textSize="25sp"
                android:textColor="#000000">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/recipeIngrediantTitle"
                android:text="Ingrediant"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@id/recipe_description">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recipe_Ingrediant"
                android:layout_below="@id/recipeIngrediantTitle"
                android:text="description"
                android:padding="10dp"
                android:textSize="25sp"
                android:textColor="#000000">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:id="@+id/recipeTitle"
                android:text="Recipe"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@id/recipe_Ingrediant">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recipe"
                android:layout_below="@id/recipeTitle"
                android:text="description"
                android:padding="10dp"
                android:textSize="25sp"
                android:textColor="#000000">

            </TextView>
        </LinearLayout>



    </ScrollView>



</RelativeLayout>